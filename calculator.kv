<Windows>
    id: calculator
    display: entry
    historyID: history


    GridLayout:
        rows:7
        font_size: sp(100)
        padding: sp(20)
        spacing: sp(5)
        size: root.width , root.height

        TextInput:
            id: entry
            padding: sp(10)
            font_size: sp(50)
            multiline: False
            readonly: True
            spacing: sp(10)

        BoxLayout:
            spacing: sp(5)
            Button:
                font_size: sp(30)
                text: "AC"
                on_press: entry.text = ""
            Button:
                font_size: sp(30)
                on_press:
                    list = entry.text[:-1]
                    entry.text = list
                Image:
                    source:"backspace.png"
                    size: sp(30), sp(30)
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                font_size: sp(30)
                text: "%"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "/"
                on_press:entry.text += self.text

        BoxLayout:
            spacing: sp(5)
            Button:
                font_size: sp(30)
                text: "7"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "8"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "9"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "*"
                on_press:entry.text += self.text
        BoxLayout:
            spacing: sp(5)
            Button:
                font_size: sp(30)
                text: "4"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "5"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "6"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "-"
                on_press:entry.text += self.text
        BoxLayout:
            spacing: sp(5)
            Button:
                font_size: sp(30)
                text: "1"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "2"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "3"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "+"
                on_press:entry.text += self.text
        BoxLayout:
            spacing: sp(5)
            Button:
                id: history
                font_size: sp(0)
                on_press: entry.text = history.text
                Image:
                    source:"history.png"
                    size: sp(30), sp(30)
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                font_size: sp(30)
                text: "0"
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "."
                on_press:entry.text += self.text
            Button:
                font_size: sp(30)
                text: "="
                on_press:
                    calculator.calculate(entry.text)
                    calculator.retrieve(entry.text)
