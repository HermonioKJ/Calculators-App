<Windows>
    id: calculator
    display: entry

    GridLayout:
        rows:6
        font_size: 100
        pos: 50,50
        spacing: 10
        size: root.width - 100, root.height - 100


        TextInput:
            id: entry
            padding: 10
            font_size: 45
            multiline: False
            readonly: True

        BoxLayout:
            spacing: 10
            Button:
                font_size: 30
                text: "AC"
                on_press: entry.text = ""
            Button:
                font_size: 30
                text: "Bkspc"
                on_press:
                    list = entry.text[:-1]
                    entry.text = list
            Button:
                font_size: 30
                text: "%"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "/"
                on_press:entry.text += self.text

        BoxLayout:
            spacing: 10
            Button:
                font_size: 30
                text: "7"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "8"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "9"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "*"
                on_press:entry.text += self.text
        BoxLayout:
            spacing: 10
            Button:
                font_size: 30
                text: "4"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "5"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "6"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "-"
                on_press:entry.text += self.text
        BoxLayout:
            spacing: 10
            Button:
                font_size: 30
                text: "1"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "2"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "3"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "+"
                on_press:entry.text += self.text
        BoxLayout:
            spacing: 10
            Button:
                on_release: app.switch_theme_style()

                Image:
                    source:"logos.png"
                    size: 60, 60
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                font_size: 30
                text: "0"
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "."
                on_press:entry.text += self.text
            Button:
                font_size: 30
                text: "="
                on_press: calculator.calculate(entry.text)